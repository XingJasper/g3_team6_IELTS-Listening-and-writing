/* pages/condition/condition.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

button {
  margin: 10px;
  padding: 10px 20px;
  font-size: 16px;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  width: 80%;
  max-height: 70%; /* 固定大小 */
  display: flex;
  flex-direction: column;
}

.modal-header {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.modal-body {
  flex: 1;
  overflow: hidden; /* 隐藏内容溢出 */
}

.scroll-view {
  height: 100%; /* 设置滚动视图高度 */
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 10px;
}

.record-item {
  margin-bottom: 10px;
}