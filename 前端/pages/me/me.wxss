.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh; /* Full height of the viewport */
  padding: 20px;
}

button {
  padding: 10px 20px;
  margin-top: 10px;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
  border: none; /* Remove default border */
  outline: none; /* Remove focus outline */
}

button:active {
  background-color: #0051a3; /* Slightly darker on click */
}